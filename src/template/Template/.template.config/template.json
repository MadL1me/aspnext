{
  "$schema": "http://json.schemastore.org/template",
  "author": "Ilya  Klimenko (MadL1me)",
  "classifications": ["WebApp", "ASP.NET 8", ".NET 8"],
  "identity": "Aspnext.Template",
  "name": "ASP.NET 8 Easy-to-use and modern template",
  "shortName": "aspnext",
  "sourceName": "AspnextTemplate",
  "tags": {
    "type": "solution",
    "language": "C#"
  },
  "symbols": {
    "UseExamples": {
      "type": "parameter",
      "descriptions": "Adds examples and code-samples for both frontend and backend",
      "datatype": "bool",
      "defaultValue": "true"
    },
    "EnableSwaggerSupport": {
      "type": "parameter",
      "descriptions": "Enables swagger support",
      "datatype": "bool",
      "defaultValue": "true"
    },
    "UseSpaFrontendFramework": {
      "type": "parameter",
      "descriptions": "Adds selected SPA framework (React)",
      "datatype": "choice",
      "defaultValue": "Next",
      "choices": [
        {
          "choice": "ReactVite",
          "description": "Use React.Ts created with vite"
        },
        {
          "choice": "Next",
          "description": "Use Next.js with Typescript and eslint support"
        },
        {
          "choice": "None",
          "description": "Do not use any spa framework"
        }
      ]
    },
    "UseEfDatabase": {
      "type": "parameter",
      "description": "Adds Database with Entity Framework and Docker-compose",
      "datatype": "choice",
      "defaultValue": "pgsql",
      "choices": [
        {
          "choice": "pgsql",
          "description": "Use PostgreSQL database inside docker compose with pgAdmin"
        },
        {
          "choice": "none",
          "description": "Do not use any database provider"
        }
      ]
    },
    "UsePostgreSql": {
      "type": "computed",
      "value": "(UseEfDatabase == \"pgsql\")"
    },
    "UseReactVite": {
      "type": "computed",
      "value": "(UseSpaFrontendFramework == \"ReactVite\")"
    },
    "UseNext": {
      "type": "computed",
      "value": "(UseSpaFrontendFramework == \"Next\")"
    }
  },
  "sources": [
    {
      "modifiers": [
        {
          "condition": "(!UseReactVite)",
          "exclude": ["react-vite/**"]
        },
        {
          "condition": "(!UseNext)",
          "exclude": ["react-next/**"]
        },
        {
          "condition": "(!UseExamples)",
          "exclude": ["AspnextTemplate/Controllers/ExampleController.cs"]
        },
        {
          "condition": "(!UsePostgreSql)",
          "exclude": [
            "AspnextTemplate/Data/Asp.AwesomeTemplateDbContext.cs",
            "AspnextTemplate/DB/**"
          ]
        }
      ]
    }
  ]
}
